<div class='container position-absolute top-80 start-50 translate-middle p-5'>
  <div class='card m-5 p-5'>
    <form
      action='/users/login'
      method='POST'
      id='form'
      class='form'
      novalidate
    >
      <div class='mb-5'>
        <h3>登入</h3>
      </div>

      <div class='mb-3'>
        <label for='email' class='form-label'>Email</label>
        <input
          type='email'
          id='email'
          name='email'
          placeholder='請輸入 Email'
          class='form-control'
          required
        />
        <div class='invalid-feedback'>
          <i class='fas fa-exclamation mx-2'></i>請輸入正確的 Email
        </div>
      </div>

      <div class='mb-5'>
        <label for='password' class='form-label'>密碼</label>
        <input
          type='password'
          id='password'
          name='password'
          placeholder='請輸入密碼'
          class='form-control'
          required
        />
        <div class='invalid-feedback'>
          <i class='fas fa-exclamation mx-2'></i>密碼不可空白
        </div>
      </div>

      <div class='d-flex align-items-center'>
        <button type='submit' class='btn btn-info text-white'>登入</button>
        <div class='ms-3'>
          還沒有帳號？<a href='/users/signup' class='text-info'>註冊</a>
        </div>
      </div>
    </form>
  </div>
</div>

<script src='/javascripts/form.js'></script>
