{{!-- restaurant name --}}
<h1 class="mb-1 restaurant-show-title">
  {{restaurant.name}}
</h1>

{{!-- restaurant detail --}}
<div class="container m-5">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        {{#if restaurant.google_map}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
        {{/if}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="my-5">
        {{restaurant.description}}
      </p>

      {{#if restaurant.image}}
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}" style="max-width: 600px;" />
      {{/if}}

    </div>
  </div>
</div>

{{!-- buttons --}}
<div class="restaurant-btn m-5">
  <a href="/restaurants/{{restaurant.id}}/edit" class="btn btn-success">
    <i class="fas fa-edit mx-1"></i>編輯
  </a>
  <form action="" method="POST" id="delete-form" class="ms-3">
    <button type="button" onclick="confirmDelete({{restaurant.id}})" class="btn btn-danger">
      <i class="fas fa-trash-alt mx-1"></i>刪除
    </button>
  </form>
  <a href="/restaurants" class="btn btn-secondary ms-3">
    <i class="fas fa-home mx-1"></i>返回首頁
  </a>
</div>

<script>
  function confirmDelete(id) {
    if (confirm('確定要刪除嗎？')) {
      const form = document.getElementById('delete-form');
      form.action = `/restaurants/${id}?_method=DELETE`;
      form.submit();
    }
  }
</script>
