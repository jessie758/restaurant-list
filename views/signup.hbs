<div class='container position-absolute top-80 start-50 translate-middle p-5'>
  <div class='card m-5 p-5'>
    <form
      action='/users/signup'
      method='POST'
      id='form'
      class='form'
      novalidate
    >
      <div class='mb-5'>
        <h3>註冊</h3>
      </div>

      <div class='mb-3'>
        <label for='name' class='form-label'>使用者名稱</label>
        <input
          type='text'
          id='name'
          name='name'
          placeholder='請輸入使用者名稱'
          class='form-control'
        />
      </div>

      <div class='mb-3'>
        <label for='email' class='form-label'>Email</label>
        <input
          type='email'
          id='email'
          name='email'
          placeholder='請輸入 Email'
          class='form-control'
          required
        />
        <div class='invalid-feedback'>
          <i class='fas fa-exclamation mx-2'></i>請輸入正確的 Email
        </div>
      </div>

      <div class='mb-3'>
        <label for='password' class='form-label'>密碼</label>
        <input
          type='password'
          id='password'
          name='password'
          placeholder='請輸入密碼'
          class='form-control'
          required
        />
        <div class='invalid-feedback'>
          <i class='fas fa-exclamation mx-2'></i>密碼不可空白
        </div>
      </div>

      <div class='mb-5'>
        <label for='checkPassword' class='form-label'>確認密碼</label>
        <input
          type='password'
          id='checkPassword'
          name='checkPassword'
          placeholder='請再次輸入密碼'
          class='form-control'
          required
        />
        <div class='invalid-feedback'>
          <i class='fas fa-exclamation mx-2'></i>確認密碼不可空白
        </div>
      </div>

      <button type='submit' class='btn btn-primary'>註冊</button>
    </form>
  </div>
</div>

<script src='/javascripts/form.js'></script>
